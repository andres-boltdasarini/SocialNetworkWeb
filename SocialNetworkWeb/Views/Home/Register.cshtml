@model RegisterViewModel

<!-- Отладочная информация для первой формы -->
<div style="background: #e6f7ff; padding: 10px; margin-bottom: 10px; border: 1px solid blue;">
    <strong>Debug Form1:</strong> 
    Step: @Model.Step
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
@* <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.17.0/jquery.validate.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.10/jquery.validate.unobtrusive.min.js"></script> *@

<h2>Регистрация - Шаг 1</h2>
<form method="post" action="@Url.Action("RegisterStep1", "Register")">
    @Html.AntiForgeryToken()
    <div asp-validation-summary="All" class="text-danger"></div>
    
    <div class="form-group">
        <label asp-for="FirstName" class="control-label"></label>
        <input asp-for="FirstName" class="form-control" />
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <label asp-for="LastName" class="control-label"></label>
        <input asp-for="LastName" class="form-control" />
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <label class="control-label">Дата рождения</label>
        <div class="row">
            <div class="col-4">
                <label>День</label>
                <input asp-for="Date" class="form-control" placeholder="1-31" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="col-4">
                <label>Месяц</label>
                <input asp-for="Month" class="form-control" placeholder="1-12" />
                <span asp-validation-for="Month" class="text-danger"></span>
            </div>
            <div class="col-4">
                <label>Год</label>
                <input asp-for="Year" class="form-control" placeholder="1900-2023" />
                <span asp-validation-for="Year" class="text-danger"></span>
            </div>
        </div>
    </div>
    
    <div class="form-group">
        <button type="submit" class="btn btn-primary btn-block">Продолжить регистрацию</button>
    </div>
</form>