@model MainViewModel

<div class="row">
    <div class="side">
        <div class="center">
            Пользуйтесь нашей самой крутой соцсетью! Регистрируйтесь всего за 2 минуты, делитесь мыслями, находите новых друзей.
        </div>
        <img class="main-img" src="http://pngimg.com/uploads/husky/husky_PNG19.png" />
    </div>

    <div class="main">
        <!-- Отладочная информация -->
        <div style="background: #f8f9fa; padding: 10px; margin-bottom: 20px; border: 1px solid #ccc;">
            <strong>Debug Info:</strong> 
            Step: @(Model?.RegisterView?.Step ?? 1) |
            FirstName: @(Model?.RegisterView?.FirstName ?? "null") |
            URL: @Context.Request.Path
        </div>

        @if (Model?.RegisterView != null)
        {
            if (Model.RegisterView.Step == 1)
            {
                <partial name="~/Views/Home/Register.cshtml" model="Model.RegisterView" />
            }
            else if (Model.RegisterView.Step == 2)
            {
                <partial name="~/Views/Home/RegisterPart2.cshtml" model="Model.RegisterView" />
            }
        }
    </div>
</div>