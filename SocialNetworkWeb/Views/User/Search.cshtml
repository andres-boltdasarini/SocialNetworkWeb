@model SearchViewModel

@{
    ViewData["Title"] = "Поиск пользователей";
}

<h2>Поиск пользователей</h2>

<form method="get" class="mb-3">
    <div class="input-group">
        <input type="text" name="searchTerm" class="form-control" placeholder="Введите имя, фамилию или email..." value="@Model.SearchTerm">
        <button type="submit" class="btn btn-primary">Поиск</button>
    </div>
</form>

@if (Model.Users.Any())
{
    <div class="row">
        @foreach (var user in Model.Users)
        {
            <div class="col-md-6 mb-3">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">@user.FirstName @user.LastName</h5>
                        <p class="card-text">@user.UserName</p>
                        
                        <div class="btn-group">
                            @if (user.IsFriend)
                            {
                                <form method="post" asp-action="RemoveFriend">
                                    <input type="hidden" name="friendId" value="@user.Id" />
                                    <input type="hidden" name="searchTerm" value="@Model.SearchTerm" />
                                    <button type="submit" class="btn btn-danger">Удалить из друзей</button>
                                </form>
                            }
                            else if (user.FriendRequestSent)
                            {
                                <button class="btn btn-secondary" disabled>Запрос отправлен</button>
                            }
                            else
                            {
                                <form method="post" asp-action="AddFriend">
                                    <input type="hidden" name="friendId" value="@user.Id" />
                                    <input type="hidden" name="searchTerm" value="@Model.SearchTerm" />
                                    <button type="submit" class="btn btn-success">Добавить в друзья</button>
                                </form>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
else if (!string.IsNullOrEmpty(Model.SearchTerm))
{
    <div class="alert alert-info">Пользователи не найдены</div>
}