@model RegisterViewModel

@{
    ViewData["Title"] = "Завершение регистрации";
}

<div class="row">
    <div class="col-md-6 offset-md-3">
        <h2>Завершение регистрации</h2>
        
        <form asp-action="Register" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <!-- Показываем ошибки валидации -->
            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger">
                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                    {
                        <span>@error.ErrorMessage</span><br />
                    }
                </div>
            }

            <!-- Скрытые поля для передачи данных из первой части -->
            <input type="hidden" asp-for="FirstName" />
            <input type="hidden" asp-for="LastName" />
            <input type="hidden" asp-for="EmailReg" />
            <input type="hidden" asp-for="Year" />
            <input type="hidden" asp-for="Month" />
            <input type="hidden" asp-for="Date" />
            <input type="hidden" asp-for="Login" />

            <div class="form-group">
                <label asp-for="PasswordReg" class="control-label"></label>
                <input asp-for="PasswordReg" class="form-control" />
                <span asp-validation-for="PasswordReg" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PasswordConfirm" class="control-label"></label>
                <input asp-for="PasswordConfirm" class="form-control" />
                <span asp-validation-for="PasswordConfirm" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">Зарегистрироваться</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}